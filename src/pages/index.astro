---
import Card from '../components/common/card.astro';
import { AnimationCode } from '../components/animation-code';
import { PropertiesForm } from '../components/properties-form';
import { Timeline } from '../components/timeline';
import { Preview } from '../components/preview';
import logo from '../assets/logo.svg';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>MotionCSS</title>

    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-8X0PFCGQB6"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-8X0PFCGQB6');
    </script>
  </head>
  <body>
    <main class="flex min-h-screen justify-between">
      <div class="relative flex flex-grow flex-col">
        <div class="absolute left-0 m-4">
          <div class="inline">
            <img src={logo} alt="" width={48} height={48} />
          </div>
        </div>

        <Preview client:only />

        <div class="p-8">
          <Card>
            <Timeline client:only />
          </Card>
        </div>
      </div>

      <div class="flex w-1/4 flex-col gap-4 p-8">
        <Card>
          <PropertiesForm client:only />
        </Card>

        <Card>
          <AnimationCode client:only />
        </Card>
      </div>
    </main>
  </body>
</html>
